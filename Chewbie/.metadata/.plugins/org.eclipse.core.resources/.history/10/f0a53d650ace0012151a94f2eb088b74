package me.xiangchen.app.eerv2;

import java.util.Hashtable;

import android.graphics.Color;
import android.view.MotionEvent;
import android.view.View;
import android.widget.LinearLayout;

import com.sony.smallapp.SmallAppWindow;
import com.sony.smallapp.SmallApplication;

public class EERv2 extends SmallApplication {
	
	/*
	 * interface dimension
	 */
	final int width	 = 200;
	final int height = 300;
	LinearLayout layout;
	
	final int MAXTOUCHPOINTS 	=2;
	final int WATCHWIDTH 		=128;
	final int WATCHHEIGHT 		=128;
	xacSwipe swipe;
	Hashtable touches;
	
	@Override
    public void onCreate() {
        super.onCreate();
        
        // interface dimensions
        layout = new LinearLayout(this);
        layout.setBackgroundColor(Color.GREEN);
        setContentView(layout);
        
        SmallAppWindow.Attributes attr = getWindow().getAttributes();
        attr.width = width;
        attr.height = height;
        
        getWindow().setAttributes(attr);
        
        // swipe
        swipe = new xacSwipe();
        
        layout.setOnTouchListener(new View.OnTouchListener() {
			
			@Override
			public boolean onTouch(View v, MotionEvent event) {
				// TODO Auto-generated method stub
				int action = event.getActionMasked();
				switch(action) {
					case MotionEvent.ACTION_DOWN:
						int numTouches = event.getPointerCount();
						if(numTouches > MAXTOUCHPOINTS) {
							return true;
						}
						
						for(int i=0; i<numTouches; i++) {
							String key = new String(event.getPointerId(i));
						}
						break;
					case MotionEvent.ACTION_MOVE:
						break;
					case MotionEvent.ACTION_UP:
						break;
					default:
						break;
				}
				return true;
			}
		});
	}
}
